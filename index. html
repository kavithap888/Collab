<body>
  <header>Sunny Delights Dashboard</header>
  <div id="root"></div>

  <!-- React and ReactDOM via CDN -->
  <script src="https://unpkg.com/react@18/umd/react.development.js" crossorigin></script>
  <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js" crossorigin></script>
  <script src="https://unpkg.com/babel-standalone@6/babel.min.js"></script>

  <!-- React Code -->
  <script type="text/babel">
    function DashboardCard({ title, value }) {
      return (
        <div className="card">
          <h2>{title}</h2>
          <p>{value}</p>
        </div>
      );
    }

    function App() {
      const data = [
        { title: "Total Sales", value: "$12,430" },
        { title: "Orders Today", value: "128" },
        { title: "Top Product", value: "Mango Smoothie" },
        { title: "Stock Alert", value: "Low: Pineapple" }
      ];

      return (
        <div className="dashboard">
          {data.map((item, index) => (
            <DashboardCard key={index} title={item.title} value={item.value} />
          ))}
        </div>
      );
    }

    const root = ReactDOM.createRoot(document.getElementById('root'));
    root.render(<App />);
  </script>
</body>
