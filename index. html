  <meta charset="UTF-8">
  <title>Sunny Delights Dashboard</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      background: #fff9e6;
      color: #333;
    }
    header {
      background-color: #f9c74f;
      padding: 1rem;
      text-align: center;
      font-size: 1.8rem;
      font-weight: bold;
      color: #fff;
    }
    .dashboard {
      padding: 2rem;
      display: grid;
      gap: 1rem;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }
    .card {
      background: white;
      padding: 1rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      text-align: center;
    }
    .card h2 {
      margin: 0.5rem 0;
      font-size: 1.2rem;
      color: #f9844a;
    }
  </style>
